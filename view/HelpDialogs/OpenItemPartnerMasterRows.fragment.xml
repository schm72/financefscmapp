<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<ObjectListItem
		type="{device>/listItemType}"
		press="onSelect"
		title="{PartnerDesc}" >
		<ObjectAttribute title="Id" 
						 text="{ path: 'Partner', 
						         formatter: 'com.springer.financefscmapp.util.Formatter.overlayTenZero' }"
			/>
		<ObjectAttribute title="Country" 
						 text="{ path: 'Country', 
								 formatter: 'com.springer.financefscmapp.util.Formatter.getLongCountry' }"
			/>
	</ObjectListItem>
</core:FragmentDefinition>
